<h2>Welcom to Pizza Shop!</h2>
	<div class="row">
		<% @product.each do |p| %>
					<div class="col-md-4">
						<div>
							<h3><%= p.title %></h3>	
						</div> 

						<div>
							<img src="<%= p.path_to_image %>" />
						</div> 

						<div>
							<%= p.description %>
						</div> 
						<div>
							Size: <%= p.size %> см.
						</div> 
						<div>
							Price: <%= p.price %> руб.
						</div> 
						<div>
							<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)" >Add to cart</button>
						</div>
					</div>
		<% end %>	
	</div>
<br/><br/>
<button class="btn btn-primary btn-lg" onclick="aaa()">Click me!</button>

<script type="text/javascript">
	$(function() {
		update_orders_input();
	});
</script>


